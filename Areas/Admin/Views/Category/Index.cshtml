@model IEnumerable<Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create New Category
            </a>
        </div>
    </div>
    <br/><br/>
<table class="table table-bordered table-striped">
    <thead>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </th>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id>
                            <i class="bi bi-pencil"></i></a>
                         <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id>
                           <i class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

</div>